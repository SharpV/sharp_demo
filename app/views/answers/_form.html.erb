<div class='entry'>
	<div class='left'>
		<p>
			<%= image_tag current_user.avatar_url(:s) || "http://placehold.it/50x50" %>
		</p>
		<p>
			<%= h current_user.login %>
		</p>
	</div>

	<div class="right">
		<%= simple_form_for [@question, @answer], :html => {:class => 'form-stacked, new-share'} do |f| -%>	
			<%= f.error_notification %>
			<%= f.input :body, :as => :kindeditor, :label => '回答', :input_html => { :width => 600, :height => 450 } %>
			<%= f.submit "保存", :class=>'btn primary' %>&nbsp;<button class="btn" type="reset">Cancel</button>
			</div>
		<% end %>
	</div>
</div>
