<h2></h2>
<%- if current_user %>
<%= tabs_tag(:namespace => :site_nav, :open_tabs => {:id => "site_nav", :class => "nav" }, :builder => MenuTabBuilder) do |tab| %>
<%= tab.index '首页', root_path %>
<%= tab.group 'Groups', groups_path %>
<% Grade.list.each do |grade| %>
<li class="dropdown">
  <a data-toggle="dropdown" class="dropdown-toggle" href="#"><%= grade.name %> <b class="caret"></b></a>
  <%= tabs_tag(:namespace => :grades_nav, :open_tabs => {:id => "grades_nav", :class => "dropdown-menu" }, :builder => MenuTabBuilder) do |tab| %>
  <% grade.children.each do |child| %>
  <%= tab.try "grade_#{child.id}", child.name, child %>
<li class="divider"></li>
<% end %>
<% end %>
<% end %>
<% end %>
<% end %>
