<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div id="page" class="container">
      <div class="row">
        <div class='span-l'>
           <%= avatar_tag(@current_webclass, 'b') %>
           <h4><%= @current_webclass.name %></h4>
           <p><%= @current_webclass.body %></p>
           <h4 class='border'>
            班主任
           </h4>
           <%= user_avatar_tag(@current_webclass.creator, 'm') %>
        </div>

        <div class='span-r'>
          <%= render 'webclass/menu' %>
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div>
    </div> <!-- /container -->
    <%= render 'layouts/footer' %>
  </body>
</html>
