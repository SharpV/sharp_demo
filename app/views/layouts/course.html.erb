<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div id="page" class="container">
      <div class="row">
        <div class='span-l'>
          <div class='avatar'><%= link_to image_tag(avatar_url(@course, 'b')), @course %></div>
          <h4><%= @course.name %></h4>
        </div>

        <div class='span-r'>
          <%= render 'course/nav' %>
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div>
    </div> <!-- /container -->
    <%= render 'layouts/footer' %>
  </body>
</html>
