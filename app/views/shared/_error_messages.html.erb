<% if object.errors.any? %>  
 <div class="alert alert-block alert-error">
   <a class="close" href="#">×</a>
   <p><strong>有 <%= object.errors.count %> 处问题导至无法提交:</strong></p>
   <ul>
   <% object.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>
