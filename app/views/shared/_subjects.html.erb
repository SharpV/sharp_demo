<ul id="subjects_nav" class="mega-menu">
  <%- Grade.child_grade.each do |grade| %>
    <li>
      <%= link_to grade.name, [grade, resource] %>
      <ul>
        <%- grade.subjects.each do |subject| %>
          <li>
            <%= link_to subject.name, [subject, resource] %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
