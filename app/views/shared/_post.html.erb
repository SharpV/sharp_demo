<li id='post-<%= post.id %>'>
  <div class='avatar'>
    <br />
    <%= link_to user_avatar_tag(post.creator, 's'), post.creator %>
  </div>
  <div class='content'>    
    <h4>
      <%= link_to post.title, [namespace, post].flatten %>

      <%= link_to '删除', [namespace, post].flatten, method: :delete, class: 'btn btn-small btn-danger pull-right span', confirm: "是否删除 #{post.title}" %>

      <%= link_to '编辑', [:edit, namespace, post].flatten, class: 'btn btn-small btn-info pull-right span' %>
    </h4>
    <p>
      <%- if truncate_size %>
        <%= truncate post.body, :length => truncate_size, :omission => '......' %>
      <% else %>
        <%= post.body %>
      <% end %>
    </p>
    <div class='item item-info clearfix'>
      <span>作者(<%= link_to post.creator.nickname, post.creator %>)</span> 
      <span>阅读(<%= post.readings_count %>)</span>
      <span>评论(<%= post.comments_count %>)</span>
      <div class='pull-right'>
        <%= format_datetime post.created_at %>
      </div>
    </div>
  </div>
</li>
