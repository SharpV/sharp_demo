    <%=link_to '创建班级', [:new, :user, current_user, :webclass], class: 'btn btn-success pull-right span' if current_user.teacher? %>
  </div>
  <div class='margin clearfix'>
    <%=link_to '创建群组', [:new, :user, current_user, :group], class: 'btn btn-info pull-right span' %>
  </div>
  <%- if @recommand_users.size > 10 %>
  <% else %>
    <%= render 'webclasses' %>
    <%= render 'groups' %>
  <% end %>
