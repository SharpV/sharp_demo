<tr id='member-<%= member.id %>'>
  <td><%= member.name %></td>
  <td><%= member.name %></td>
  <td><%= member.role_name %></td>
  <td><%= format_datetime member.created_at %></td>
  <td><%= member.note %></td>

  <td>
    <%= link_to '同意', [:agree, :group, @current_group, member], class: 'btn btn-success btn-small', remote: true, data: {type: "script"}, disable_with: "..." %> 
      &nbsp; &nbsp;
    <%= link_to '拒绝', [:reject, :group, @current_group, member], class: 'btn btn-danger btn-small', remote: true, data: {type: "script"}, disable_with: "..."  %>
  </td>
</tr>