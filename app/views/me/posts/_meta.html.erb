<div class="meta content">
  <ul>
    <li class="span"> 浏览(<%= post.readings_count %>)</li>
    <li class="span"> 评论(<%= post.comments_count %>)</li>

    <li class="span">发表于 <%= format_post_date(post.created_at) %></li>
    <li class="span">
      <%= link_to post.category.name, me_category_path(post.category.id), class: :tag if post.category %>
    </li>
  </ul>
  <%- if current_user and post.belongs?(current_user) %>
    <div class="pull-right"><%= link_to "编辑", edit_me_post_path(post) %></div>
  <% end -%>
</div>
