<table class='table content'>
  <thead>
    <tr>
      <th></th>
      <th>名称</th>
      <th>纪录数量</th>  
      <th>操作</th>
    </tr>
  </thead>
  <tbody id='section-list'>
    <%= render @categories %>
  </tbody>
</table>
<%= simple_form_for @categories, url: course_course_sections_path(@course), remote: true, html: {class: 'form-stacked', data: {type: "script", method: :post} } do |f| -%> 
  <%= f.error_notification %>
  <%= f.input :title, :label => '名称' %>
  <div class="actions">
    <%= f.submit '创建', :class=>'btn btn-primary' %>
  </div>
<% end %>
