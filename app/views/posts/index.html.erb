<div class='span-l'>
  <%= render partial: 'shared/columns', locals: {resource: :posts}  %>
</div>
 
<div class='span-r'>
  <%= render 'nav' %>
  <div class='row'>
    <div class='span-l'>
      <ul class='post-list'>
        <%= render partial: 'shared/posts/post', collection: @posts, locals: {namespace: [:user, @current_user], truncate_size: 172} %>
      </ul>
      <%= paginate @posts %>

    </div>
    <div class='span-r'>
      <%= render 'top_users' %>
    </div>
  </div>
</div>

