<h4 class='border'>本周文章专家</h4>

<ul id='top_users'>
  <%- Post.top_users_by_week.each do |user| %>
    <li>
      <div class='avatar'>
        <%= link_to user_avatar_tag(user, 's'), user %>
      </div>

      <div class='content'>
        <%= link_to user.name, user %>
        <p>
          <%= user.posts_value %>
        </p>
      </div>
    </li>
  <% end %>
</ul>
