<div class='meta'>
	<table>
		<tr>
			<td width='120'>
				发布于 <%= format_post_date(@question.created_at) %>
			</td>
			<td width='80'>
				浏览 [<%= @question.view_count %>]
			</td>
			<td width='80'>
				回答 [<%= @question.answers_count %>]
			</td>
			<td width='80'>
				<%= link_to "编辑", edit_question_path(@question) %>
			</td>
			<td width='80'>
				<%= link_to '删除', @question, :confirm => '是否确定删除?', :method => :delete if current_user.login == @question.login %>
			</td>
			<td width='120'>
				<div class='pull-right'>
					<%= render "shared/jiathis" %>
				</div>
			</td>
		</tr>
	</table>
</div>