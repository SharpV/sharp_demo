<%= simple_form_for @current_group, :html => {:class => 'form-stacked'}, validate: true do |f| -%> 
  <%= f.error_notification %>
  <%= f.input :name, :class=>'xlarge', :label => '名称' %>
  <%= f.input :avatar, :label => '图标' %>
  <%# f.input :kind_id, :label => t('kind'), :collection => Group.Kinds, :include_blank => false, :required => true %>
  <%= f.input :body, label: '简介' %>
  <div class="actions">
    <%= f.submit '创建', :class=>'btn btn-primary', disable_with: "正在提交..." %>
  </div>
<% end %>
