<%= simple_form_for @current_group, :html => {:class => 'form-stacked, new-share'} do |f| -%>	
	<%= f.error_notification %>
	<%= f.input :name, :class=>'xlarge', :label => t('name') %>
	<%= f.input :logo, :label => t('logo') %>
	<%# f.input :kind_id, :label => t('kind'), :collection => Group.Kinds, :include_blank => false, :required => true %>
	<%= f.input :description, :label => t('description') %>
	<div class="actions">
		<%= f.submit t("Save"), :class=>'btn primary' %>&nbsp;<button class="btn" type="reset">Cancel</button>
	</div>
<% end %>