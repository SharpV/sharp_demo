<% content_for(:head) do -%>
<%= javascript_include_tag 'common' %>
<%= javascript_include_tag 'live-comment-preview' %>
<% end -%>
<div class='span-left'>
	<%= render "users/menu" %>
	<div id='post' class='post'>
		<h4><i class="icon-large <%= @post.avatar %>"></i>  <%= link_to(@post.title, my_post_path(@post)) %></h4>
		<div class="footer clearfix">
			<%= render 'post_footer', :post => @post %>
		</div>
		<div class='body'>
			<%= raw @post.body %>
		</div>
	</div>
	<div class='clearfix'></div>
	<br />
	<%= render 'comments' %>
</div>
<div class='span-right'>
	<%- if current_user and current_user.login == @user.login %>
		<%= render "categories" %>
	<% else %>
		<%= render "users/profile" %>		
	<% end %>
</div>

