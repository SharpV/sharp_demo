<div class='row'>
  <div class='span-l'>
    <h4><%= @current_group.current_term.name %>课程表</h4>
    <table class='table table-bordered'>
      <thead>
        <tr class="success">
          <th width='80'>课程</th>
          <th>周一</th>  
          <th>周二</th>
          <th>周三</th>
          <th>周四</th>
          <th>周五</th>
          <th>周六</th>
        </tr>
      </thead>
      <tbody id='slot-list'>
        <%= render partial: 'group/courses/section', collection: @sections %>
      </tbody>
    </table>
  </div>
  <div class='span-r pull-right'>
    <h4>课件分类</h4>
    <%- if @courses.size > 0 %>
      <%= tabs_tag(:namespace => :group_courses_nav, :open_tabs => {:class => "nav nav-tabs nav-stacked"}, :builder =>       MenuTabBuilder) do |tab| %>
        <%- @courses.each do |course| %>
          <%= tab.try "course_#{course.id}",  course.name, group_group_course_path(@current_group, course) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
