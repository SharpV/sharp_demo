<div id='post-pic' style='display:none'>
	<%= simple_form_for [@user, @post], :html => {:id => "new_post_form", :class => 'form-horizontal'} do |f| -%>	
		<%= render 'shared/error_messages', :object => f.object %>
		<%= f.input :title, :class=>'xlarge', :label => '标题' %>
		<%= f.input :post_category_id, :label => "分类", :collection => nested_set_options(PostCategory, current_user.root_category){|i| "#{'-' * i.level} #{i.name}"} %>
		<%= f.input :file, :class=>'xlarge', :label => '图片' %>
		<%= f.input :body, :label => '描述', :input_html => { :width => 620, :height => 450 } %>
		<%= f.input :tag_list, :class=>'input_field', :label => "标签" %>
		<%= render "shared/tag_select", :f => f %>
		<div class="form-actions">
			<%= f.submit "发布", :class=>'btn btn-primary' %>&nbsp;
			<button class="btn" type="reset">保存为草稿</button>
		</div>
	<% end %>
</div>