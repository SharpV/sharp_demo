<div class='row'>
  <div class='span-l'>
    <h4>已发送的信件</h4>
    <table class='table'>
      <thead>
        <tr class="success">
          <th>收件人</th>  
          <th>标题</th>
          <th>发送时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody id='message-list'>
        <%= render partial: 'shared/messages/outbox', collection: @messages, as: :message %>
      </tbody>
    </table>
    <%= paginate @messages %>
  </div>
  <div class='span-r pull-right'>
    <%= render 'shared/messages/actions' %>
  </div>
</div>