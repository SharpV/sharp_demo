<%= tabs_tag(:namespace => :group_nav, :open_tabs => {:class => "nav nav-tabs"}, :builder => MenuTabBuilder) do |tab| %>
  <%= tab.index raw("首页"), @group %>
  <%= tab.posts raw("话题"), group_group_posts_path(@group) %>
  <%= tab.folders raw("文件"), group_group_folders_path(@group) %>
  <%= tab.members raw("成员"), group_group_members_path(@group) %>
  <%- if @group_member.admin %>
      <%= tab.admin raw("管理"), admin_group_group_settings_path(@group) %>
  <% end %>
  <div class="btn-group pull-right">
    <%- if @group_member %>
      <button data-toggle="dropdown" class="span btn btn-info dropdown-toggle">添加话题 <span class="caret"></span></button >
      <ul class="dropdown-menu">
        <li><b>请您先选择分类</b></li>
        <%- @group.categories.each do |category| %>
          <li><%= link_to category.name, new_group_group_category_post_path(@group, category) %></li>
        <% end %>
      </ul>
      <button data-toggle="dropdown" class="span btn btn-success dropdown-toggle">添加文件 <span class="caret"></span></    button>
      <ul class="dropdown-menu">
        <li><b>请您先选择目录</b></li>
        <%- @group.folders.each do |folder| %>
          <li><%= link_to folder.name, new_group_group_folder_medium_path(@group, folder) %></li>
        <% end %>
      </ul>
    <% else %>
      <%= link_to "申请加入", apply_group_path(@group), remote: true, class: 'btn btn-info pull-right' %>
    <% end %>
  </div>
<% end %>

