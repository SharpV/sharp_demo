<%= simple_form_for @assignment, url: webclass_webclass_assignments_path(@current_webclass, @assignment), validate: true do |f| %>
  <%= f.input :title, label: '名称' %>
  <%= f.association :course, collection: @courses, label: '相关科目', :include_blank => "请选择相关科目" %>
  <%= f.input :submit_at, label: '提交时间' %>
  <%= f.input :body, label: '内容' %>
  <%= f.submit value: '发布作业', class: 'btn btn-info', disable_with: "正在提交..." %>
<% end %>