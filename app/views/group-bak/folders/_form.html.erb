<%= form_for Folder.new, :url => group_group_folders_path(@group), :validate => true, remote: true, :html => {:class => 'form-horizontal', id: 'folder-form', data: {type: "script", method: :post}} do |form| %>
  <%= form.text_field :name, label: '名称' %>
  <%= form.submit '创建', :class=>'btn btn-primary inline', disable_with: "正在提交..." %>
<% end %>