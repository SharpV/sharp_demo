<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
  <%= f.input :email, :required => false, :autofocus => true, :label => '邮箱' %>
  <%= f.input :password, :required => false, :label => '密码' %>
  <%= f.input :remember_me, inline_label: '记住我', as: :boolean, label: false %>
  <div class="actions">
    <%= f.button :submit, "登 录", :class => 'btn btn-primary' %> &nbsp;&nbsp;
	  <%= link_to "注册", new_registration_path(resource_name), :class=>'btn' %>
		<%= link_to "忘记密码?", new_password_path(resource_name), :class=>'pull-right' %><br />
  </div>
<% end %>

