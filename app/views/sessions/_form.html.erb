<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<h3>登录</h3><br />
	<%= render 'shared/error_messages', :object => f.object %>
  <div class="inputs">
    <%= f.input :login, :required => false, :autofocus => true, :label => '用户名' %>
    <%= f.input :password, :required => false, :label => '密码' %>
		<input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" class="boolean optional"> 记住我 
  </div>
	<br />
  <div class="actions">
    <%= f.button :submit, "登 录" %> &nbsp;&nbsp;
	  <%= link_to "注册", new_registration_path(resource_name), :class=>'btn' %>
		<%= link_to "忘记密码?", new_password_path(resource_name), :class=>'pull-right' %><br />
  </div>
<% end %>

