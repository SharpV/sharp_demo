
<div class='span-l'>
  <%= render partial: 'shared/subjects', locals: {resource: :media} %>
</div>
 
<div class='span-r'>
  <%= render 'nav' %>
  <div class='row'>
    <div class='span-l'>
      <ul id='media' class='inline image-text-list clearfix'>
        <%- @media.each do |medium| %>
          <li class='hover'>
            <div class='image'>
              <%= link_to image_tag(medium.thumbnail_url), [:user, medium.creator, medium] %>
            </div>
            <div class='content'>
              <h4><%= link_to medium.title, [:user, medium.creator, medium] %></h4>
              <p>
                <%- if medium.grade %>
                  <%= link_to medium.grade.name, [medium.grade, :media]%>
                <% end %>
                <%- if medium.subject %>
                  <%= link_to medium.subject.name, [medium.subject, :media]%>
                <% end %>
              </p>
              <p>
                下载(<%= medium.downloads_count %>) 查看(<%= medium.readings_count %>)
              </p>
              <p>上传日期(<%= format_datetime(medium.created_at) %>)</p>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @media %>
    </div>
    <div class='span-r'>
      <%= render 'top_users' %>
    </div>
  </div>
</div>
