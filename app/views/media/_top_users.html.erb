<h4 class='border'>月度资源专家</h4>
<ul id='top_users'>
  <%- @top_users.each do |user| %>
    <li>
      <div class='avatar'>
        <%= link_to user_avatar_tag(user, 's'), user %>
      </div>

      <div class='content'>
        <%= link_to user.name, user %>
        <p>
          <%= user.media_value %>
        </p>
      </div>
    </li>
  <% end %>
</ul>