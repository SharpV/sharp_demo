<%= tabs_tag(:namespace => :webclasses_nav, :open_tabs => {:class => "nav nav-tabs"}, :builder => MenuTabBuilder) do |tab| %>
  <%= tab.index "推荐班级", :webclasses %>
  <%= tab.hot "热点班级", [:hot, :webclasses] %>
  <%= tab.latest "最新班级", [:latest, :webclasses] %>
  <%= tab.top "排行榜", [:top, :webclasses] %>
  <%- if current_user %>
    <%= link_to '创建班级', [:new, :user, current_user, :webclass], class: 'btn btn-success pull-right' %>
  <% else %>
    <%= link_to '立即注册', new_user_registration_path, class: 'btn btn-success pull-right' %>
  <% end %>
<% end %>

