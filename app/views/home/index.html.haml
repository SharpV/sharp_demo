.content
  %h4= "Product List (#{Product.count})"
  %table.table
    %thead
      %tr
        %th= "Name"
        %th= "Category"
        %th= "Price"
        %th= "Created at"
    - @products.each do |product|
      %tr
        %td
          = link_to product.name, [:detail, product], remote: true, data: {type: 'script'}
        %td= product.catelog
        %td= product.price
        %td{width: 160}
          = timeago_tag product.created_at, :nojs => true
  = paginate @products