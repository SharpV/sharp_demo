<div class="login-box">
  <%= form_for("user", :url => user_session_path, :html => {:class => 'form-stacked'}) do |f| %>
	<div class="clearfix">
		<label for="xlInput">标题</label>
		<div class="input">
			<%= f.text_field :email, :class => 'xlarge' %>
		</div>
	</div>
	<div class="clearfix">
		<label for="xlInput">标题</label>
		<div class="input">
			<%= f.password_field :password, :class => 'xlarge' %>
		</div>
	</div>
	<%= f.check_box :remember_me %>
	<%= f.label :remember_me %>
	<%= f.submit 'Sign in' %>
 <% end %>
</div>
