<div id='post-status'>
	<%= simple_form_for [@user, @activity], :remote => true, :html => {:id => "new_status_form", :class => 'form-horizontal', :data => {:type=>"script", :"method"=>"post"}} do |f| -%>	
		<%= render 'shared/error_messages', :object => f.object %>
		<%= f.input :content, :input_html => { :width => 120, :height => 50 } %>
		<div class="form-actions">
			<%= f.submit "发布", :class=>'btn btn-primary' %>&nbsp;
			<button class="btn" type="reset">保存为草稿</button>
		</div>
	<% end %>
</div>