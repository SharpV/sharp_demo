<%= simple_form_for @category, :validate => true, url: [:user, current_user, :categories], remote: true, html: {id: 'category-form', data: {type: "script", method: :post} } do |f| -%> 
  <%= f.error_notification %>
  <%= f.input :name, :label => '名称' %>
  <%= f.submit '提交', :class=>'btn btn-primary', disable_with: "正在提交..." %>
<% end %>