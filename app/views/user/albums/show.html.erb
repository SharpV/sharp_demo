<div class='row'>
  <div class='span-l'>
    <h4 class='border'>
      <%= @album.name %>
      <%- if @current_user.id == current_user.id %>
        <%= render 'shared/images/add_btn' %>
      <% end %>
    </h4>
    <%= render 'shared/albums/images' %>
  </div>
  <div class='span-r pull-right'>
    <%- if @current_user.id == current_user.id %>
      <%= link_to "相册管理", [:user, current_user, :albums], class: 'btn btn-info' %>
    <% end %>
    <%= render partial: 'shared/albums/list' %>
  </div>
</div>
