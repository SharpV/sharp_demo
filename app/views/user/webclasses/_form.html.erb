<%= simple_form_for [:user, current_user, @webclass], :html => {:class => 'form-stacked'}, validate: true do |f| -%> 
  <%= f.label :name, '名称' %>
  <%= f.text_field :name %>
  <%= f.label :avatar, '图标' %>
  <%= f.file_field :avatar %>
  <%= f.label :school, '学校' %>

  <%= select_tag :province_id, options_for_select(Province.all.collect{|i|[i.name, i.id]}), {prompt: '请选择省份',
    data: {
      remote: true,
      url: '/ajax/get_cities_by_province',
      update: "city-list",
      type: 'script'
    }, style: 'float:left'}
  %>

  <%= select_tag :city_id, options_for_select([]), {prompt: '请选择地市',
    data: {
      remote: true,
      url: '/ajax/get_zones_by_city',
      update: "zone-list",
      type: 'script'
    }, id: 'city-list'}
  %>
  <%= select_tag :zone_id, options_for_select([]), {prompt: '请选择区县',
    data: {
      remote: true,
      url: '/ajax/get_schools_by_zone',
      type: 'script'
    }, id: 'zone-list'}
  %>
  <%= f.select :school_id, options_for_select([]) , {prompt: '请选择学校'}, {id: 'school-list'} %>

  <%= f.label :body, '简介' %>
  <%= f.text_area :body %>
  <div class="form-actions">
    <%= f.submit '创建', :class=>'btn btn-primary', disable_with: "正在提交..." %>
  </div>
<% end %>
