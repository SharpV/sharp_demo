<h4>
  <%= link_to "#{@current_user.name}的文章", [:user, @current_user, :posts] %>
  <%- if current_user.id == @current_user.id  %>
    <%= link_to "分类管理", [:user, current_user, :categories], class: 'btn btn-info pull-right span' %>
    <div class="btn-group pull-right clearfix">
      <button data-toggle="dropdown" class="span btn btn-success dropdown-toggle">
        创建文章
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><b>请您先选择分类</b></li>
        <%- @categories.each do |c| %>
          <li><%= link_to c.name, [:new, :user, @current_user, c, :post] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</h4>