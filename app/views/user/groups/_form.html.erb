<%= javascript_include_tag "js/tag-it.min" %>
<%= simple_form_for [:user, current_user, @group], :validate => true, :html => {:class => 'form-horizontal'} do |f| %>
  <% @group.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    <%= f.input :name, label: '名字', :validate => {:presence => true} %>
    <%= f.input :avatar, label: "图标" %>
    <%= f.input :published, label: '公开' %>
    <%= f.input :body, :label => '简介' %>
    <%= f.input :tag_list, label: '标签' %>

    <%= f.submit '创建', disable_with: "正在提交...", class: 'btn btn-primary' %>
<% end %>