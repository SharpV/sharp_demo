<%= simple_form_for @folder, :url => [:user, current_user, @folder], :validate => true, remote: true, :html => {:class => 'form-horizontal', id: 'folder-form', data: {type: "script"}} do |form| %>
  <%= form.input :name, label: '名称' %>
  <%= form.submit :class=>'btn btn-primary inline', disable_with: "正在提交..." %>
<% end %>