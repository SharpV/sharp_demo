<%= javascript_include_tag "js/tag-it.min" %>
<%= simple_form_for [:user, current_user, @question], :validate => true do |f| %>
  <%= f.input :title, label: '标题', :validate => {:presence => true} %>
  <%= f.label :grade, '分类' %>
  <%= f.select :grade_id, Grade.all.map{|g|[g.name, g.id]},  {prompt: '请选择'}, {
    data: {
      remote: true,
      url: '/ajax/get_subjects_by_grade',
      type: 'script'
    }, style: 'float:left' 
    }
  %> 
  <%= f.select :subject_id, [],  prompt: '请选择', class: 'span' %>    
  <%= f.input :body, as: :kindeditor, label: false, input_html: {simple_mode: true, width: 500, height: 300 }, :validate => {presence: true}  %>

    <%= f.submit class: 'btn btn-primary', disable_with: "正在提交..." %>
<% end %>